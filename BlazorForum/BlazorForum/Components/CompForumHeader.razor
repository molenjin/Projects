@using BlazorForum.Libraries

@inject LibFormat LibFormat

<span class="forum_header">
    @if (ForumLinkOn)
    {
        <a class="header" href="/">ACCN Forum</a>
    }
    else
    {
        <span>ACCN Forum</span>
    }
    @if (ActionLinkOn)
    {
        <span> | </span>
        <a class="header" href="" @onclick="@OnActionLink" @onclick:preventDefault>@ActionTitle</a>
    }
    else
    {
        <span> | @LibFormat.HtmlDecode(@ActionTitle)</span>
    }
</span>

@code {
    [Parameter]
    public bool ForumLinkOn { get; set; }

    [Parameter]
    public string ActionTitle { get; set; } = String.Empty;

    [Parameter]
    public bool ActionLinkOn { get; set; } 

    [Parameter]
    public EventCallback OnActionLink { get; set; }
}
